{
  "manifest_version": 3,
  "name": "Screenshot Taker",
  "version": "1.1",
  "description": "A Chrome extension to take screenshots of the current page.",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
